<?xml version="1.0"?>

<configuration>
  
    <connectionStrings>
        <add name="PlayerVaultConnectionString" connectionString="Data Source=.;Initial Catalog=PlayerVault;Integrated Security=True"
            providerName="System.Data.SqlClient" />
    </connectionStrings>
  
    <system.web>
      <compilation debug="true" strict="false" explicit="true" targetFramework="4.5" />
      <httpRuntime targetFramework="4.5" />
      <sessionState timeout="10080"/>
    </system.web>
  
    <appSettings>
      <add key="ValidationSettings:UnobtrusiveValidationMode" value="None"/>
    </appSettings>

</configuration>
